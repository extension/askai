<h1>Edit Question</h1>

<%= form_with(model: @question, local: true) do |form| %>
  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </div>

  <div style="margin-top: 1em;">
    <%= form.label :reviewed_and_edited_answer, "Reviewed and Edited Answer" %><br>
    <%= form.text_area :reviewed_and_edited_answer, rows: 12, id: "conversation-editor" %>
  </div>

  <div style="margin-top: 1em;">
    <%= form.submit "Update Question" %>
  </div>

  <details style="margin-top: 1em;">
    <summary style="cursor: pointer;">🔍 View Original Conversation Thread</summary>
    <div style="margin-top: 0.5em; padding: 1em; background: #f5f5f5; border: 1px solid #ccc;">
      <%= raw(@question.full_conversation_thread) %>
    </div>
  </details>

<% end %>
