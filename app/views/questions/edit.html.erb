<h1>Edit Question</h1>

<%= form_with(model: @question, local: true) do |form| %>
  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title, size: 100 %>
  </div>

  <div style="margin-top: 1em;">
    <h3>Original Question Text</h3>
    <p><%= @question.text %></p> <!-- Displaying the original question text -->
  </div>

  <div style="margin-top: 1em;">
    <%= form.label :reviewed_and_edited_answer, "Reviewed and Edited Answer" %><br>
    <%= form.text_area :reviewed_and_edited_answer, rows: 12, id: "conversation-editor" %>
  </div>

  <div style="margin-top: 1em;">
    <%= form.submit "Update Question" %>
  </div>
<% end %>

